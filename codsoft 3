codsoft project 3
#include <iostream>
using namespace std;

char board[3][3];
char currentPlayer;

void initializeBoard() {
    for (int i = 0; i < 3; i++)
        for (int j = 0; j < 3; j++)
            board[i][j] = ' ';
}

void printBoard() {
    cout << "\n";
    cout << "  1   2   3\n";
    for (int i = 0; i < 3; i++) {
        cout << i + 1 << " ";
        for (int j = 0; j < 3; j++) {
            cout << board[i][j];
            if (j < 2) cout << " | ";
        }
        cout << "\n";
        if (i < 2) cout << " ---+---+---\n";
    }
    cout << "\n";
}

bool isWinner() {
   
    for (int i = 0; i < 3; i++) {
        if ((board[i][0] == currentPlayer &&
             board[i][1] == currentPlayer &&
             board[i][2] == currentPlayer) ||
            (board[0][i] == currentPlayer &&
             board[1][i] == currentPlayer &&
             board[2][i] == currentPlayer)) {
            return true;
        }
    }
    if ((board[0][0] == currentPlayer &&
         board[1][1] == currentPlayer &&
         board[2][2] == currentPlayer) ||
        (board[0][2] == currentPlayer &&
         board[1][1] == currentPlayer &&
         board[2][0] == currentPlayer)) {
        return true;
    }

    return false;
}

bool isDraw() {
    for (int i = 0; i < 3; i++)
        for (int j = 0; j < 3; j++)
            if (board[i][j] == ' ')
                return false;
    return true;
}

void switchPlayer() {
    currentPlayer = (currentPlayer == 'X') ? 'O' : 'X';
}

bool makeMove(int row, int col) {
    if (row < 1 || row > 3 || col < 1 || col > 3) {
        cout << "Invalid input. Please enter values from 1 to 3.\n";
        return false;
    }

    if (board[row - 1][col - 1] != ' ') {
        cout << "Cell already taken. Try again.\n";
        return false;
    }

    board[row - 1][col - 1] = currentPlayer;
    return true;
}

int main() {
    initializeBoard();
    currentPlayer = 'X';
    bool gameOver = false;

    cout << "Welcome to Tic Tac Toe (C++)\n";
    printBoard();

    while (!gameOver) {
        int row, col;
        cout << "Player " << currentPlayer << "'s turn. Enter row and column (1-3): ";
        cin >> row >> col;

        if (!makeMove(row, col)) continue;

        printBoard();

        if (isWinner()) {
            cout << "Player " << currentPlayer << " wins!\n";
            gameOver = true;
        } else if (isDraw()) {
            cout << "It's a draw!\n";
            gameOver = true;
        } else {
            switchPlayer();
        }
    }

    return 0;
}
